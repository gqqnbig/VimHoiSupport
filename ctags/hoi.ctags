--langdef=hoi
--langmap=hoi:.txt
--regex-hoi=/^[[:digit:]]+\s*\=//{exclusive}

# level 1
--regex-hoi=/^(\w+)\s*\=\s*\{\s*(#.*)?$/\1/s,section/{scope=set}
--regex-hoi=/^\s*id\s*\=\s*([^{]+)\s*(#.*)?$/\1/i,id/{scope=ref}
--regex-hoi=/^}\s*(#.*)?$//{scope=pop}{exclusive}


# level 2
--regex-hoi=/^\s(trigger)\s*\=\s*\{\s*(#.*)?$/\1/s,section/{scope=ref}
